	<!--영균 작업 시작 -->
	<!-- 용량제한 100MB로 설정 -->
		<constant name="struts.multipart.maxSize" value="104857600" />

		<package name="board" extends="struts-default, tiles-default">

	<!-- 영균 : 에러페이지 관련 (주석처리) -->
		<!-- 
		<global-results>
